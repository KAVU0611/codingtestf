# Copy this file to .env and fill in the required values before running any scripts.
# Secrets should never be committed to version control.

# Core AWS configuration
AWS_PROFILE=codex
AWS_REGION=ap-northeast-1
AWS_DEFAULT_REGION=${AWS_REGION}

# Optional explicit credentials (prefer profile-based auth when possible)
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_SESSION_TOKEN=

# Bedrock Agent / Knowledge Base configuration
BEDROCK_AGENT_ID=
BEDROCK_KNOWLEDGE_BASE_ID=
BEDROCK_MODEL_ARN=
BEDROCK_SESSION_ID=bedrock-smoke-session
BEDROCK_PROMPT_TEXT=Summarize the albums in my playlist.

# Lightsail deployment configuration
LIGHTSAIL_REGION=${AWS_REGION}
LIGHTSAIL_AVAILABILITY_ZONE=
LIGHTSAIL_BLUEPRINT_ID=ubuntu_22_04
LIGHTSAIL_BUNDLE_ID=nano_2_0
LIGHTSAIL_INSTANCE_NAME=playlist-bedrock
LIGHTSAIL_KEY_PAIR_NAME=
LIGHTSAIL_SSH_USER=ubuntu
LIGHTSAIL_SSH_KEY_PATH=~/.ssh/LightsailDefaultKey-us-east-1.pem
LIGHTSAIL_REMOTE_PATH=/var/www/playlist
LIGHTSAIL_DOMAIN=example.com
LIGHTSAIL_CERT_EMAIL=admin@example.com

# Snapshot settings
LIGHTSAIL_SNAPSHOT_NAME=${LIGHTSAIL_INSTANCE_NAME}-snapshot

# Optional Git configuration for publish helper
GIT_REMOTE=origin
GIT_BRANCH=main
